include menu

doctype html
html
	head
		title= title		
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
			br
			br
			form(role='form', action="/login",method="post")
				div.container
					div.row
						div.col-md-5.col-md-offset-3
							div.panel.panel-login			
								div.panel.panel-primary
									div.panel-heading
										h3.panel-title Sign In						
									div.panel-body
										div#msg_info #{msg}
										div.form-group
											div.row
												div.col-xs-10
													input.input-block-level(type="text", name="username", class="form-control" placeholder="Email address")
										div.form-group										
											div.row
												div.col-xs-10 
													input.input-block-level(type="password", name="password", class="form-control" placeholder="Password")							
										div.form-group
											div.row
												div.col-xs-6
													button.btn.btn-large.btn-primary.btn-group-justified(type="submit", class="btn btn-default") Sign in
												div.col-xs-4
										div.form-group
											div.row
												div.col-xs-6
													div.text-nowrap
														a(href="/forgot") Forgot Password?
												div.col-xs-4												
								div.form-group
									div.row
										div.col-xs-2
										div.col-xs-6
											div.text-nowrap 
												a(href="/register") Resgister for New account?
										div.col-xs-3										
